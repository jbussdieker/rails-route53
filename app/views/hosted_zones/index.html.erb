<h2>Hosted Zones</h2>

<p>
  <%= link_to 'New Hosted Zone', new_hosted_zone_path, class: 'btn btn-primary' %>
  <%= link_to 'Sync', sync_hosted_zones_path, class: 'btn btn-primary' %>
</p>

<table class="table table-bordered table-striped table-hover">
  <tr>
    <th>Name</th>
    <th>Zone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @hosted_zones.each do |hosted_zone| %>
  <tr>
    <td><%= link_to hosted_zone.name, hosted_zone %></td>
    <td><%= hosted_zone.hosted_zone_id %></td>
    <td><%= hosted_zone.resource_record_sets.count %></td>
    <td><%= link_to 'Edit', edit_hosted_zone_path(hosted_zone) %></td>
    <td><%= link_to 'Destroy', hosted_zone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
